# syntax=docker/dockerfile:1
FROM node:18-alpine

WORKDIR /app

# Copy package.json trước để cache cài dependencies
COPY package*.json ./

# Cài dependencies (bao gồm devDeps)
RUN npm install

# Tạo non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

USER nodejs

EXPOSE 3000

# Mặc định chạy bằng dev script (ví dụ dùng nodemon hoặc ts-node-dev)
CMD ["npm", "run", "dev"]
