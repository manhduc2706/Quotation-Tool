{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Backend API with Node.js, TypeScript, and Express",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "test": "jest",
    "seed": "nodemon --watch 'src/seeds/**/*.ts' --exec ts-node src/seeds/seed.ts",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:build": "docker build -t backend-api .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t backend-api:dev ."
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "lucide-react": "^0.540.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.5",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
